<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <br>
      <h1 class="welcome-title"><%= @article.title %></h1>
      <p><%= @article.content %></p>
      <br>
      <hr>
      <br>
      <%= link_to "Back to the articles list", articles_path, class:"btn btn-default"%>
      <%= link_to "Edit", edit_article_path, class:"btn btn-primary" %>
      <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger" %>
    </div>
  </div>
</div>
