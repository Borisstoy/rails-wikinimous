<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <h1>Articles</h1>
      <%= link_to "Write an article", new_article_path, class:"btn btn-default"%>
      <div class="wrapper-articles">
        <% @articles.each do |article| %>
          <ul>
            <li><%= link_to article.title, article, class:"title-article" %></li>
            <li><%= article.content %></li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
