<%= form_for @article do |f|%>
  <div class="form-group">
    <label for="">Title</label>
    <%= f.text_field :title, class:"form-control" %>
    <br>
    <label for="">Article</label>
    <%= f.text_area :content, class:"form-control" %>
    <br>
    <%= f.submit "Create", class:"btn btn-primary" %>
  </div>
<% end %>
